<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <title>Home page</title>
</head>
<body>
    <%- include('partials/nav.ejs') %>
    <div class="container mt-3">
        <div class="row row-cols-1 row-cols-md-3 g-4 g-col-6">
        <% blogs.forEach(element=> { %>
            <div class="col">
            <div class="card" style="width: 18rem;">
                <img src="<%= element.coverImageURL %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= element.title %> %></h5>
                  <a href="/blog/<%= element._id %>" class="btn btn-primary">view</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    </div>
    <%-include('partials/scripts.ejs')  %>
</body>
</html>